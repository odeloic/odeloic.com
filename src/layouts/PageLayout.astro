---
import BaseLayout from './BaseLayout.astro';
interface Props {
  title: string;
  description: string;
  updatedAt?: string;
}

const { title, description, updatedAt } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article class="page">
    <header class="page-header">
      <h1>{title}</h1>
      {updatedAt && (
        <p class="updated">Last updated: {new Date(updatedAt).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}</p>
      )}
    </header>
    <div class="page-content">
      <slot />
    </div>
  </article>
</BaseLayout>

<style>
  .page {
    max-width: 600px;
  }

  .page-header {
    margin-bottom: var(--space-xl);
  }

  .page-header h1 {
    margin-bottom: var(--space-sm);
  }

  .updated {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin: 0;
  }

  .page-content {
    font-size: var(--font-size-base);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-muted);
  }

  .page-content :global(p) {
    margin-bottom: var(--space-lg);
  }

  .page-content :global(p:last-child) {
    margin-bottom: 0;
  }

  .page-content :global(strong),
  .page-content :global(a) {
    color: var(--color-text);
  }

  .page-content :global(a) {
    color: var(--color-accent);
  }

  .page-content :global(h2) {
    font-size: var(--font-size-xl);
    color: var(--color-text);
    margin-top: var(--space-2xl);
    margin-bottom: var(--space-md);
  }

  .page-content :global(ul),
  .page-content :global(ol) {
    margin-bottom: var(--space-lg);
    padding-left: var(--space-lg);
  }

  .page-content :global(li) {
    margin-bottom: var(--space-sm);
  }
</style>